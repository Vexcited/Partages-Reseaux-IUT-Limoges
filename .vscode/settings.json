{
  "cSpell.language": "en,fr",
  "tailwindCSS.classAttributes": [
    "class",
    "classList"
  ],

  "eslint.experimental.useFlatConfig": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2
}